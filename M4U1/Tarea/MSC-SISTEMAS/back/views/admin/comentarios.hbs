<div style="display:flex;justify-content:space-between;margin-right:20px;">
    <div>
    <h3 style="font-family: 'Fira Sans Condensed', sans-serif;color:white;text-shadow: 2px 2px 2px black;border:2pt black">Lista de comentarios</h3>
    </div>
    <div>
        <a href="/admin/comentarios/agregar">
        <button type="button"  style="width: 60px;height: 30px;background-color: darkorchid;color: white;font-family: 'Saira', sans-serif;border-radius: 50px;font-size:10pt;">Nuevo</button>
        </a>   
    </div>
</div>
<div>
<table class="table">
    <thead >
        <tr>
            <th scope="col">#</th>
            <th scope="col" style="width: 650px ;">Comentario</th>
              <th scope="col">Foto</th>
            <th scope="col" class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each comentarios}}
        <tr>
            <th scop/tabe="row">{{com_id}}</th>
            <td>{{com_comentario}}</td>
            <td>{{{foto}}}</td>
            <td class="text-end">
                <a href="/admin/comentarios/eliminar/{{com_id}}" >                   
                 <button type="button" class="btn btn-danger" style="width: 20%; height:20%; font-size:9pt;font-family: 'Varela Round', sans-serif;">Eliminar</button>
                    {{!-- <i class="bi bi-trash" aria-hidden="true"></i></a> --}}
                <a href="/admin/comentarios/modificar/{{com_id}}" >
                  <button type="button" class="btn btn-success" style="width: 20%; height: 20px%; font-size:9pt;font-family: 'Varela Round', sans-serif;" >Modificar</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
