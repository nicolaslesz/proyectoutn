<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<div style="margin-top:120px;height: 00px;">
 <form action="/admin/login" method="post"> 
<div class="form-floating mb-3" style="width: 500px;text-align:center;margin:30px auto;">
  <input type="text" class="form-control" id="floatingInput" placeholder="Usuario" name="usuario">
  <label for="floatingInput">Usuario</label>
</div>
<div class="form-floating" style="width: 500px;text-align:center;margin: 10px auto;">
  <input type="password" class="form-control" id="floatingPassword" placeholder="Password" style="align-items:center;" name="password">
  <label for="floatingPassword">Contraseña</label>
<button type="submit" style="width: 100px;height: 50px;background-color: darkorchid;color: white;font-family: 'Saira', sans-serif;margin-top: 20px;border-radius: 50px;margin:30px auto;">Enviar</button>
</div>
</form>
{{#if error}}
  <p>Usuario y/o Contraseña incorrectos</p>
{{/if}}  
</div>

